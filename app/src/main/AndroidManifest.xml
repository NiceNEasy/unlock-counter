<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.erickim.android.unlockcount">

    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_unlock1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity android:name=".Statistic" />
        <activity android:name=".Friends" />
        <activity android:name=".Account"></activity>


        <receiver android:name=".UnlockReceiver">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON">
                </action>
            </intent-filter>
        </receiver>


        <receiver android:name=".LockReceiver">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_OFF">
                </action>
            </intent-filter>

        </receiver>
    </application>

</manifest>